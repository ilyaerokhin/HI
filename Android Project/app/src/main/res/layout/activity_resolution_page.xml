<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sec_color"
    tools:context="com.hot_ice.hot_ice.ResolutionPage">

    <TextView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Resolution"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I accept the terms of use"
        android:id="@+id/resolutionButton"
        android:background="@color/navpage_color"
        android:onClick="onResolutionButton"
        android:layout_gravity="right"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/Resolution"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
